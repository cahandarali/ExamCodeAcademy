@model TeamMember

<div class="content-wrapper">
    <div class="row">

        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create Client</h4>

                    <form class="forms-sample" enctype="multipart/form-data" method="post">

                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Surname">Surname</label>
                            <input asp-for="Surname" class="form-control" placeholder="Surname">
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" for="Description">Description</label>
                            <input asp-for="Description" class="form-control" placeholder="Description">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        

                        <div class="form-group">
                            <label asp-for="Image" for="Image">Image</label>
                            <input asp-for="Image" class="form-control" placeholder="Image">
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <img src="~/assets/img/team/@Model.Image" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Photo" for="category">Photo</label>
                            <input asp-for="Photo" class="form-control" placeholder="Photo">
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PositionId">Profession</label>


                            <select asp-for="PositionId" asp-items="new SelectList(ViewBag.Positions,nameof(Position.Id),nameof(Position.Name))">
                                <option selected disabled>Select Position</option>
                            </select>

                            <span asp-validation-for="PositionId" class="text-danger"></span>

                        </div>

                        <button type="submit" class="btn btn-primary me-2">Update</button>
                        <a asp-action="index" class="btn btn-light">Cancel</a>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>